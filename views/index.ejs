<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real-Time Device Tracker</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.min.css" integrity="sha512-h9FcoyWjHcOcmEVkxOfTLnmZFWIH0iZhZT1H2TbOq55xssQGEJHEaIm+PgoUaZbRvQTNTluNOEfb1ZRy6D3BOw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div id="app-container">
        <!-- Header -->
        <div class="header">
            <h1>Real-Time Device Tracker</h1>
            <div class="status-info">
                <div class="status-badge">
                    <div class="status-dot"></div>
                    <span>Connected</span>
                </div>
                <div class="status-badge">
                    <span>Active Users: <span class="user-count" id="userCount">0</span></span>
                </div>
            </div>
        </div>

        <!-- Map Container -->
        <div id="map"></div>

        <!-- Info Panel -->
        <div class="info-panel" id="infoPanel">
            <h3>Connected Users</h3>
            <ul class="users-list" id="usersList">
                <li style="color: #999; font-style: italic;">No users connected yet...</li>
            </ul>
        </div>

        <!-- Control Buttons -->
        <div class="controls">
            <button class="btn btn-primary" id="centerBtn" onclick="centerToMyLocation()">üìç Center to Me</button>
            <button class="btn btn-secondary" id="togglePanel" onclick="toggleInfoPanel()">üë• Toggle Users</button>
        </div>

        <!-- Loading Spinner -->
        <div class="loading" id="loading" style="display: none;">
            <div class="spinner"></div>
            <div class="loading-text">Getting your location...</div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.min.js" integrity="sha512-puJW3E/qXDqYp9IfhAI54BJEaWIfloJ7JWs7OeD5i6ruC9JZL1gERT1wjtwXFlh7CjE7ZJ+/vcRZRkIYIb6p4g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.socket.io/4.8.0/socket.io.min.js" integrity="sha384-OoIbkvzsFFQAG88r+IqMAjyOtYDPGO0cqK5HF5Uosdy/zUEGySeAzytENMDynREd" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
</body>
</html>
